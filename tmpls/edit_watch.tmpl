<html>
<head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/public/favicon.ico"/>
    <meta name="viewport" content="width=device-width">
    <title>Domains</title>
    <link rel="stylesheet" href="/public/css/style.css" />
</head>
<body>
    <h1>Edit watch list: {{ .Name }}</h1>
    <nav>
        <a href="/">Home</a>
    </nav>
    <form action="/watch/edit/{{ .WatcherID }}" method="post">
        <p class="error-message">{{ .Error }}</p>
        <p>Patterns, one regex pattern at every line:</p>
        <input name="name" placeholder="watch list name" value="{{ .Name }}" />
        <textarea cols="30" rows="20" name="patterns" placeholder="Example:qq\d\d">{{ .Pattern }}</textarea>
        <button type="submit">Update</button>
    </form>
</body>
</html>
